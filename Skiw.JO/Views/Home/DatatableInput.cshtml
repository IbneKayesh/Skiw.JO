<form id="dynamic-form" method="post" action="/Home/DatatableInput">
    @foreach (DataColumn column in Model.Columns)
    {
        <div class="form-group">
            <label for="@column.ColumnName">@column.ColumnName</label>
            <input type="text" class="form-control" name="@column.ColumnName" value="@Model.Rows[0][column.ColumnName]" />
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>



